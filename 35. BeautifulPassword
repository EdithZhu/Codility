import java.util.*;

class Solution {
    public int solution(String S) {
        int sLen = S.length();
        //store the positions
        Map<Long,Integer> map = new HashMap<>();
        map.put(new Long(0),-1);
        int res = 0;
        long index = 0;
        for (int i=0;i<sLen;i++) {
            char cha = S.charAt(i);
            long num = 0;
            if (Character.isDigit(cha)){
                num = cha - '0';
            } else if (Character.isLetter(cha)) {
                num = cha - 'a' + 10;//after digits
            }
            long anchor = 1;
            index = index ^ ( anchor << num );//xor
            if (map.containsKey(index)) {
                res = Math.max(res, i-map.get(index));
            } else {
                map.put(index,i);
            }
        }
        return res;
    }
}
